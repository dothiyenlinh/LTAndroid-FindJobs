<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>

            <TextView
                android:id="@+id/idS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text=""
                android:textColor="#7F4E9E"
                android:textSize="75sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:background="@drawable/nxvchoose"/>


            <TextView
                android:id="@+id/idSH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Jobs"
                android:textColor="#7F4E9E"
                android:textSize="75sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"/>


        </TableRow>

    </TableLayout>
    <TextView

        android:id="@+id/txtdatlaimk"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt lại mật khẩu"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtnhapmatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Mật khẩu:"
        android:textColor="#000000"
        android:textSize="26sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtdlmatkhau"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edttron"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/txtnhaplaimatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Nhập lại mật khẩu:"
        android:textColor="#000000"
        android:textSize="26sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtnhaplaimatkhau"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edttron"
        android:ems="10"
        android:inputType="textPersonName" />
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnGui"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Gửi"
        android:textStyle="bold"
        android:textSize="24dp"
        android:background="@drawable/btntron"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"/>

</LinearLayout>