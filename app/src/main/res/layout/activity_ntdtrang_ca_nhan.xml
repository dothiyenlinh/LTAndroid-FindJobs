<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen">

    <TextView
        android:id="@+id/txtCV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="Thông tin cá nhân"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txthoten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Tên công ty:"
            android:textColor="#000000"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/edtHoten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edttron"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#BEBEBE "
            android:textSize="24sp" />

            <TextView
                android:id="@+id/txtrinhdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Vị trí:"
                android:textColor="#000000"

                android:textSize="24dp" />

        <EditText
            android:id="@+id/edttrinhdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edttron"
            android:ems="11"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#BEBEBE "
            android:layout_marginLeft="10dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textSize="26dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
    </TableLayout>


            <EditText
                android:id="@+id/edtsnkn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edttron"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="24dp" />



    <TextView
        android:id="@+id/txtvclm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/edtnoilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edttron"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="24dp" />


        <TextView
            android:id="@+id/txtmucluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="26dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>



            <EditText
                android:id="@+id/edtmucluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edttron"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="24dp" />

    <TextView
        android:id="@+id/txtnoilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Mô tả công ty:"
        android:textColor="#000000"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/edtnoivclm"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edttron"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="24dp" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/btnLuu"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:text="Chỉnh sửa"
        android:background="@drawable/btntron"
        android:textColor="#FFFFFF"
        android:textSize="25sp"/>
</LinearLayout>