<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TableRow>

            <TextView
                android:id="@+id/idS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text=""
                android:textColor="#7F4E9E"
                android:textSize="75sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:background="@drawable/nxvchoose"/>


            <TextView
                android:id="@+id/idSH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Jobs"
                android:textColor="#7F4E9E"
                android:textSize="75sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"/>


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/idSU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Người xin việc điền đầy đủ thông tin"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNameSU"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Tên"
        android:textColor="#BEBEBE "
        android:background="@drawable/edttron"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/email"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Email"
        android:textColor="#BEBEBE "
        android:background="@drawable/edttron"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editpasswordSU"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/iconkhoa"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Mật khẩu"
        android:textColor="#BEBEBE "
        android:background="@drawable/edttron"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="346dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:drawableRight="@drawable/phone"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Số điện thoại"
        android:textColor="#BEBEBE "
        android:background="@drawable/edttron"
        android:textSize="24sp" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        android:layout_width="132dp"
        android:layout_height="59dp"
        android:text="ĐĂNG KÝ"
        android:background="@drawable/btntron"
        android:textColor="#FFFFFF"
        android:textSize="25sp"/>

</LinearLayout>